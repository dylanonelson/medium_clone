<label for="story_title"></label>
<input type="hidden" id="story_title" name="story[title]" value="<%= story.escape('title') %>">
<div id="title_content_editor" class="editable" placeholder="Title"><%= story.escape('body') %></div>

<label for="story_body"></label>
<input type="hidden" id="story_body" name="story[body]" ><%= story.escape('body') %></textarea>
<div id="body_content_editor" class="editable" placeholder="Write your story."><%= story.escape('body') %></div>

<div id="story-options-view">
  <button id="upload-banner">Add a banner</button>
  <input type="file" id="upload-banner-input"></input>
  <button id="publish-story">Save</button>
  <div id="tag-form-view"></div>
</div>

<script>
  var bodyEditor = new MediumEditor('#body_content_editor', {
    cleanPastedHTML : true,
    placeholder : '',
    disableDoubleReturn : true,
  });

  var titleEditor = new MediumEditor('#title_content_editor', {
    disableReturn : true,
    disableToolbar : true,
    placeholder : '',
  });
</script>