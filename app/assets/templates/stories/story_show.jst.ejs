<article class="story-show-full">
  <header class="story-show-header-wide clearfix">
    <% if (story.get('banner_url')) { %>
      <img class="story-banner" src="<%= story.get('banner_url') && story.get('banner_url').original %>"/>
    <% } %>
    <h3 class="story-show-head-wide">
      <%= story.get('title') %>
    </h3>
  </header>
  <%= body %>
  <div id="author-details-view">
    <h4 class="author-details-view-head">Written by</h4>
    <img class='author-avatar' src="<%= story.get('author_avatar_url') %>">
    <h3 class='author-name'>
      <a href="#users/<%= story.get('author_id') %>">
        <%= story.get('author_username') %>
      </a>
    </h4>
    <div id="author-follow-form"></div>
  </div>
  <div id="tag-index-view">
    <% if (story.get('tags') && story.get('tags').length > 0) { %>
    <h4 class="story-tag-list-wide-head">Tagged in</h4>
    <ul class="story-tag-list-wide clearfix">
        <% story.get('tags') && story.get('tags').forEach(function(tag) { %>
          <li>
            <a class="story-tag-link" href="#tags/<%= tag.id %>">
              <%= tag.label %>
            </a>
          </li>
        <% }) %>      
    </ul>
    <% } %>
  </div>
</article>
